{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules/**",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "./expo-example/",
    "./example/"
  ]
}
